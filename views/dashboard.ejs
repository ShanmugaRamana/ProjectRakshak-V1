<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link rel="stylesheet" href="/css/style.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.awesome-markers/2.0.2/leaflet.awesome-markers.css" />
    
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.awesome-markers/2.0.2/leaflet.awesome-markers.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/leaflet.awesome-markers@2.0.5/dist/leaflet.awesome-markers.css" />

    <script src="https://cdn.jsdelivr.net/npm/leaflet.awesome-markers@2.0.5/dist/leaflet.awesome-markers.js"></script>

</head>

<body class="dashboard-body">
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>Rakshak</h2>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a href="#lost-and-found" class="nav-link active" data-target="lost-and-found-panel">Lost & Found</a></li>
                    <li><a href="#staff-management" class="nav-link" data-target="staff-management-panel">Staff Management</a></li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <span>Welcome, <%= user.username %></span>
                <a href="/auth/logout" class="logout-link">Logout</a>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            
            <!-- Panel 1: Lost & Found (Your complete, existing dashboard content) -->
            <div id="lost-and-found-panel" class="content-panel active">
                <header class="main-header">
                    <h1>Lost & Found Monitoring</h1>
                    <div id="notification-bell" style="position: relative; display: inline-block; cursor: pointer;">
                        <i class="fas fa-bell fa-lg"></i>
                        <span id="notification-count" style="position: absolute; top: -5px; right: -10px; background: red; color: white; border-radius: 50%; padding: 2px 6px; font-size: 10px; display: none;"></span>
                    </div>
                </header>

                <div class="monitoring-container">
                    <div class="video-feed-container">
                        <h3>Live Monitoring Feed</h3>
                        <img id="live-feed" src="<%= process.env.PYTHON_SERVICE_URL %>/video_feed" alt="Live Feed">
                    </div>
                    <div class="map-container">
                        <h3>Temple Layout Map</h3>
                        <div id="map"></div>
                    </div>
                </div>

                <div class="controls-container">
                    <form id="filter-form" action="/dashboard" method="GET">
                        <input type="text" name="search" placeholder="Search by name or location..." value="<%= search %>">
                        <select name="statusFilter" onchange="this.form.submit()">
                            <option value="Lost" <%= statusFilter === 'Lost' ? 'selected' : '' %>>Status: Lost</option>
                            <option value="Found" <%= statusFilter === 'Found' ? 'selected' : '' %>>Status: Found</option>
                            <option value="All" <%= statusFilter === 'All' ? 'selected' : '' %>>Status: All</option>
                        </select>
                        <select name="sort" onchange="this.form.submit()">
                            <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest First</option>
                            <option value="oldest" <%= sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
                        </select>
                        <button type="submit">Filter/Search</button>
                    </form>
                </div>

                <div class="dashboard-content">
                    <div class="person-list-container">
                        <% if (persons.length > 0) { %>
                            <ul class="person-list">
                                <% persons.forEach(person => { %>
                                    <li class="person-item" data-id="<%= person._id %>">
                                        <div class="person-item-status status-<%= person.status.toLowerCase() %>">
                                            <%= person.status %>
                                        </div>
                                        <img src="<%= person.displayImage %>" alt="Photo of <%= person.fullName %>" class="person-item-img">
                                        <div class="person-item-info">
                                            <p class="person-item-name"><%= person.fullName %></p>
                                            <p class="person-item-age">Age: <%= person.age %></p>
                                        </div>
                                    </li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <p class="no-results">No records found for the selected filter.</p>
                        <% } %>
                    </div>
                    <div class="person-details-container" id="details-view">
                        <p class="details-placeholder">Select a person from the list to see details.</p>
                    </div>
                </div>
            </div>

            <!-- Panel 2: Staff Management -->
            <div id="staff-management-panel" class="content-panel">
                <header class="main-header">
                    <h1>Add New Staff</h1>
                </header>
                <div class="staff-options">
                    <button class="staff-option-btn placeholder">Ambulance Driver</button>
                    <button class="staff-option-btn placeholder">Medical Team</button>
                    <button class="staff-option-btn" id="show-ground-staff-form">Ground Staff</button>
                </div>

                <div id="ground-staff-form-container" style="display: none;">
                    <form action="/staff/add" method="POST" class="staff-form">
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="fullName">Full Name</label>
                                <input type="text" id="fullName" name="fullName" required>
                            </div>
                            <div class="form-group">
                                <label for="staffId">Staff ID</label>
                                <input type="text" id="staffId" name="staffId" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" required minlength="6">
                            </div>
                            <div class="form-group">
                                <label for="phoneNumber">Phone Number</label>
                                <input type="tel" id="phoneNumber" name="phoneNumber" required>
                            </div>
                             <div class="form-group">
                                <label for="assignedZone">Assigned Zone</label>
                                <input type="text" id="assignedZone" name="assignedZone" value="General" required>
                            </div>
                        </div>
                        <button type="submit" class="submit-btn">Add Staff Member</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
    
    <div id="alert-container" style="position: fixed; top: 80px; right: 20px; z-index: 9999; width: 350px;"></div>

    <script src="/js/dashboard-ui.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/dashboard-live.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>